<UserControl x:Class="Techdays.WP8.Controls.TechdaysButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="200" Width="160" Height="160">

    <Grid x:Name="LayoutRoot" 
          Background="{StaticResource PhoneChromeBrush}"
          Tap="OnTap">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Rectangle x:Name="BackgroundRec"
                Fill="CornflowerBlue"
                Grid.RowSpan="2" />
        <!--<ContentPresenter x:Name="MainContent" Margin="5,5,5,5">-->
        <TextBlock x:Name="MainText" 
                       Text="Tralalala"
                       Foreground="White"
                       Margin="5,5,5,5"
                       FontWeight="Bold"></TextBlock>
        <TextBlock x:Name="SubberText" 
                       Text=""
                       Foreground="White"
                       Margin="5,5,5,5"
                       Grid.Row="1" />
        <!--</ContentPresenter>-->
    </Grid>
</UserControl>